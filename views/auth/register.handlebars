<div class="cont">
  <section class="body-wrapper con">
    <form id="register">
      <div class="reg">
        <h1>
          Registration Form
        </h1>
        <div class="inp">
          <label for="FN">
            First Name
          </label>
          <div class="sec-2">
            <ion-icon name="person-outline"></ion-icon>
            <input
              type="text"
              id="FN"
              name="firstName"
              placeholder="John"
              value="{{firstName}}"
              required
            />
          </div>
        </div>

        <div class="inp">
          <label for="LN">
            Last Name
          </label>
          <div class="sec-2">
            <ion-icon name="person-outline"></ion-icon>
            <input
              type="text"
              id="LN"
              name="lastName"
              placeholder="Doe"
              value="{{lastName}}"
              required
            />
          </div>
        </div>

        <div class="inp">
          <label for="email">
            Email
          </label>
          <div class="sec-2">
            <ion-icon name="mail-outline"></ion-icon>
            <input
              type="email"
              id="email"
              name="email"
              placeholder="student@stevens.edu"
              value="{{email}}"
              required
            />
          </div>
        </div>

        <div class="dob">
          <label for="dob">
            Date of Birth
          </label>
          <div class="sec-2">
            <ion-icon name="calendar-outline"></ion-icon>
            <input
              type="date"
              id="dob"
              name="dateOfBirth"
              value="{{dateOfBirth}}"
              required
            />
          </div>
        </div>

        <div class="inp">
          <label for="phn">
            Phone Number
          </label>
          <div class="sec-2">
            <ion-icon name="call-outline"></ion-icon>
            <input
              type="tel"
              id="phn"
              name="phoneNumber"
              placeholder="XXXXXX7890"
              value="{{phoneNumber}}"
              required
            />
          </div>
        </div>

        <div class="password">
          <label for="pass">
            Password
          </label>
          <div class="sec-2">
            <ion-icon name="lock-closed-outline"></ion-icon>
            <input
              type="password"
              id="pass"
              name="password"
              placeholder="· · · · · · · · · · ·"
              value="{{password}}"
              required
            />
          </div>
        </div>
        <div class="pass">
          <p>
            Password should have at least 1 Uppercase Character, 1 Lowercase
            Character, 1 Number, 1 Special character and password should be at
            least 6 characters long.
          </p>
        </div>
        <p class="error" id="registerError" hidden></p>

        <button type="submit" value="Submit" class="login">
          Register
        </button>
        <div class="footer">
          <span>
            <a href="/auth/login">
              Log In
            </a>
          </span>
        </div>
      </div>
    </form>
  </section>
  <label for="ripple-button1"></label>
  <button id="ripple-button1" class="rip"></button>
  <label for="ripple-button2"></label>
  <button id="ripple-button2" class="rip"></button>
  <label for="ripple-button3"></label>
  <button id="ripple-button3" class="rip"></button>
  <label for="ripple-button4"></label>
  <button id="ripple-button4" class="rip"></button>
  <label for="ripple-button5"></label>
  <button id="ripple-button5" class="rip"></button>
</div>
<script src="/public/js/auth/register.js" type="module"></script>
