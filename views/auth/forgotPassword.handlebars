<div class="cont">
  <section class="body-wrapper con">
    <form id="forgotPasswordForm">
      <div class="fp">
        <h1>
          Forgot Password
        </h1>
        <div class="inp">
          <label for="email">
            Email Address
          </label>
          <div class="sec-2">
            <ion-icon name="mail-outline"></ion-icon>
            <input
              type="email"
              id="email"
              name="email"
              placeholder="student@stevens.edu"
              required
            />
          </div>
        </div>
        <p class="error" id="forgotPwdError" hidden></p>

        <button type="submit" value="Submit" class="btn">
          Submit
        </button>
        <div class="footer">
          <a href="/auth/login">
            Log In
          </a>
        </div>
      </div>
    </form>

  </section>

  <label for="ripple-button1"></label>
  <button id="ripple-button1" class="rip"></button>
  <label for="ripple-button2"></label>
  <button id="ripple-button2" class="rip"></button>
  <label for="ripple-button3"></label>
  <button id="ripple-button3" class="rip"></button>
  <label for="ripple-button4"></label>
  <button id="ripple-button4" class="rip"></button>
  <label for="ripple-button5"></label>
  <button id="ripple-button5" class="rip"></button>
</div>
