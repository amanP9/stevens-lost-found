<form id="verifyUserForm">
  <div class="verifyScreen">
    <h1>
      Verify User
    </h1>
    <div class="inp">
      <label for="otp">
        OTP
      </label>
      <div class="sec-2">
        <ion-icon name="lock-closed-outline"></ion-icon>
        <input
          id="otp"
          type="text"
          name="otp"
          placeholder="Enter OTP..."
          required
        />
      </div>
    </div>
    <button type="submit" class="btn">
      Verify
    </button>
    <button type="button" id="btnResendOtp" class="btn {">
      Resend OTP
    </button>
    <ul id="verifyErrors" class="hide"></ul>
    <br />
  </div>
</form>

