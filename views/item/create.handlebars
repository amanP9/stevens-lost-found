<article class="py-5 px-5">
  <h1>
    Create Item
  </h1>

  <form action="{{action}}" method="POST" id="itemForm">
    <div class="form-group">
      <label>
        What do you want to report?
      </label>
      <label for="itemTypeLost" class="btn btn-primary">
        <input id="itemTypeLost" type="radio" name="type" value="lost" />
        I lost an item
      </label>
      <label for="itemTypeFound" class="btn btn-primary">
        <input id="itemTypeFound" type="radio" name="type" value="found" />
        I found an item
      </label>
    </div>

    <div id="secondaryItemForm" class="hide">
      <div class="form-group">
        <label for="itemName">
          Name
          <input
            id="itemName"
            type="text"
            name="name"
            class="form-control"
            value="{{item.name}}"
            placeholder="Name..."
            required
          />
        </label>
      </div>

      <div class="form-group">
        <label for="itemDescription">
          Description
          <input
            id="itemDescription"
            type="text"
            name="description"
            class="form-control"
            placeholder="Describe the item..."
            value="{{item.description}}"
          />
        </label>
      </div>

      <div class="form-group">
        <label for="itemLostOrFoundLocation">
          <input
            id="itemLostOrFoundLocation"
            type="text"
            name="lostOrFoundLocation"
            class="form-control"
            placeholder="Location..."
            value="{{item.lostOrFoundLocation}}"
            required
          />
        </label>
      </div>

      <div class="form-group">
        <label for="itemDateLostOrFound">
          <input
            id="itemDateLostOrFound"
            type="datetime-local"
            name="dateLostOrFound"
            class="form-control"
            placeholder="Approx date time..."
            value="{{item.dateLostOrFound}}"
            min="{{metaData.dateLostOrFound.min}}"
            max="{{metaData.dateLostOrFound.max}}"
            required
          />
        </label>
      </div>

      <div class="form-group">
        <label for="itemPicture">
          <input
            id="itemPicture"
            type="file"
            name="picture"
            class="form-control"
            placeholder="Upload a picture..."
            accept="image/jpeg, image/png, image/jpg"
          />
        </label>
      </div>

      <div class="form-group">
        <div class="itemDisplayPicture">
          <img
            id="itemDisplayPicture"
            src="http://localhost:3000/{{item.picture}}"
            alt="{{item.picture}}"
            class="hide"
          />
        </div>
      </div>

      <div class="form-group">
        <button
          type="submit"
          formenctype="multipart/form-data"
          class="btn btn-primary"
        >
          Create Item
        </button>
      </div>
    </div>

    <ul id="createItemErrors" class="hide">
    </ul>
  </form>
</article>

<script src="/public/js/item/itemCreate.js" type="module"></script>
<link rel="stylesheet" href="/public/css/form-styles.css" />