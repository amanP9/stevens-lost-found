<div class="p-4">
  <div>
    <strong>
      Type :
    </strong>
    {{item.type}}
  </div>
  <div>
    <strong>
      Name :
    </strong>
    {{item.name}}
  </div>
  <div>
    <strong>
      Description :
    </strong>
    {{item.description}}
  </div>
  <div>
    <strong>
      Date
      {{item.type}}
      :
    </strong>
    {{item.dateLostOrFound}}
  </div>
  <div>
    <strong>
      Location
      {{item.type}}
      :
    </strong>
    {{item.lostOrFoundLocation}}
  </div>
  <div>
    <strong>
      Posted by
    </strong>
    {{user.firstName}}
    {{user.lastName}}
    <strong>
      at
    </strong>
    {{item.createdAt}}
  </div>
  <div>
    <strong>
      Contact them at
    </strong>
    <a href="mailto:{{user.email}}" class="colorBlue">
      {{user.email}}
    </a>
    or
    {{user.phone}}
  </div>
  <div
    class="itemDisplayPicture my-3"
    style="background-image:url(http://localhost:3000/{{item.picture}})"
  >
  </div>
  <div class="my-3 d-flex">
    {{#if allowActions}}
      <a href="/items/edit/{{item._id}}" class="me-4 btn btn-primary px-4">
        Edit
      </a>
      <button
        id="deleteBtn"
        type="button"
        data-id="{{item._id}}"
        class="delete-btn me-4 btn btn-danger px-4"
      >
        Delete
      </button>
    {{/if}}
    {{#if item.isClaimed}}
      {{#compare item.type "lost" operator="==="}}
        <strong>
          This item has been found
        </strong>
      {{/compare}}
      {{#compare item.type "found" operator="==="}}
        <strong>
          This item has been claimed
        </strong>
      {{/compare}}
    {{else}}
      {{#compare item.type "lost" operator="==="}}
        <button
          id="modal-btn"
          class="claim-button-views btn btn-success"
          data-id="{{item._id}}"
          data-type="{{item.type}}"
        >
          Found
        </button>
      {{/compare}}
      {{#compare item.type "found" operator="==="}}
        <button
          id="modal-btn"
          class="claim-button-views btn btn-warning"
          data-id="{{item._id}}"
          data-type="{{item.type}}"
        >
          Claim
        </button>
      {{/compare}}
    {{/if}}
  </div>
</div>

<section class="p-4 mb-5">
  <h1>
    Comments
  </h1>
  {{#each item.comments}}
    <div class="comment">
      <div>
        {{{this.comment}}}
      </div>
      <div class="user">
        by
        {{this.userInfo.firstName}}
        {{this.userInfo.lastName}}
        at
        {{this.createdAt}}
      </div>
    </div>
  {{/each}}

  <div id="delete-modal" class="modal">
    <div class="modal-content">
      <div class="modal-header">
        <h1>
          Delete Listing?
        </h1>
        <span
          class="close"
          onclick="document.getElementById('delete-modal').style.display='none'"
        >
          &times;
        </span>
      </div>
      <div class="modal-body">
        <p>
          Are you sure you want to delete this listing?
        </p>
        <button
          type="button"
          id="close-this-modal"
          onclick="document.getElementById('delete-modal').style.display='none'"
          class="button"
        >
          Cancel
        </button>
        <button id="confirm-delete-btn" class="button">
          Confirm
        </button>
      </div>
    </div>
  </div>

  <div>
    <form id="comment-form" action="{{action}}" method="post">
      <label for="comment">
        Add new comment
        <br />
        <textarea
          id="comment"
          name="comment"
          rows="4"
          cols="50"
          placeholder="enter comment..."
          value=""
        >
        </textarea>
      </label>
      <div>
        <button type="submit" value="Submit" class="me-4 btn btn-primary px-4">
          Add
        </button>
      </div>
    </form>
  </div>
</section>

<div id="viewSuccessModal" class="modal-fade modal success_tic" role="dialog">
  <div class="modal-content">
    <div class="modal-body">
      <div class="page-body">
        <div class="head">
          <h2 style="margin-top:5px;">
            Listing Deleted Successfully!
          </h2>
          <div class="checkmark-circle">
            <div class="background"></div>
            <div class="checkmark draw"></div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<div id="claimModalViews" class="modal">
  <div class="modal-content">
    <div class="modal-header d-flex justify-content-between">
      <span class="w-100 fs-4" id="claimModalTitleViews"></span>
      <span class="close-btn close">
        &times;
      </span>
    </div>
    <div class="modal-body">
      <p id="claimModalTextViews" class="fs-5">
      </p>
      <button
        id="confirmBtnViews"
        data-user="{{item.createdBy}}"
        class="btn btn-success w-25"
      >
        Yes
      </button>
      <button class="close-btn btn btn-outline-secondary w-25">
        No
      </button>
      <p class="my-3">
        Once you click 'Yes', the user who created this listing will be notified
        via email.
      </p>
    </div>
  </div>
</div>

<div id="successModalViews" class="modal-fade modal success_tic" role="dialog">
  <div class="modal-content">
    <div class="modal-body">
      <div class="page-body">
        <div class="head">
          <h2 style="margin-top:5px;">
            The user has been notified!
          </h2>
          <h2 style="margin-top:5px;">
            You will shortly receive an email with additional details of the
            user who posted this listing
          </h2>
          <div class="checkmark-circle">
            <div class="background"></div>
            <div class="checkmark draw"></div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

